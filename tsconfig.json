{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "moduleResolution": "Node",
    "lib": ["ES2019", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
